{
    "name": "Xpath Finder", 
    "version": "1.3", 
    "description": "Find Elements According To Xpath In Chrome DevTools.", 
    "background": {
        "scripts": ["background.js"] 
    },
    "icons": { 
        "16": "icon_16.png",
        "48": "icon_48.png",
        "128": "icon.png" 
    },
    "devtools_page": "devtools.html", 
    "content_scripts": [{
        "matches": [ "http://*/*", "https://*/*" ], 
        "css": [ "style.css" ], 
        "js": [ "content.js" ] 
    }], 
    "permissions":  [
        "tabs", 
        "http://*/*", 
        "https://*/*"
    ], 
    "manifest_version": 2 
}
